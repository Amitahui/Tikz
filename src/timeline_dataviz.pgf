\newcommand{\mybox}[1]{%
   #1
}%

\newcommand{\mydraw}[7]{%
  \coordinate (#1) at (#2, 0);
  \draw[fill=black] (#1) circle (2pt);
  \coordinate (#1_box) at ($ (#1)+(#3) $);
  \node[
    #4,
    draw,
    rounded corners=2pt,
    fill=white,
    align=left] (#1_text) at (#1_box) {\\ \mybox{#6}};
  \path[draw, rounded corners=2pt] (#1) #7 (#1_box);
  \node[
    yshift=1pt,
    right=0.25em,
    fill=white,
    font=\small] at (#1_text.north west) {#5};
}%

